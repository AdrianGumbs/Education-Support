@model Websitet.Models.ContactModel

@{
    ViewBag.Title = "Add Contact";
}

<h2>Add Contact</h2>

<hr />

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

